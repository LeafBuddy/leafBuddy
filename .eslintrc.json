{
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-const-assign": 2,
    "no-dupe-else-if": 2,
    "no-dupe-keys": 2,
    "no-irregular-whitespace": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-unused-labels": 2,
    "no-useless-escape": 2,
    "no-delete-var": 2,
    "indent": ["warn", 2],
    "no-unused-vars": ["off", { "vars": "local" }],
    "prefer-const": "warn",
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "space-infix-ops": "warn",
    "max-len": ["error", { "code": 120, "ignoreStrings": true }]
  },
  "env": {
    "es2021": true,
    "node": true,
    "serviceworker": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
